<div class="container-fluid">
  <div class="row">
    <div class="col-md-1 col-lg-2 col-xl-3">
  </div>
  <div class="col-md-10 col-lg-8 col-xl-6">
    <h1 class="late mt-2">My Events</h1>
    <p>
      <%= link_to 'New event', new_event_path, :class => "btn btn-primary" %>
    </p>

    <table class="table table-striped table-bordered table-dark" style="table-layout: fixed;">
      <tr>
        <th scope="col">Owned Events</th>
        <th scope="col" style="width:75px;">Guests</th>
        <th scope="col" style="width:67px;">Details</th>
        <th scope="col" style="width:55px;">Edit</th>
        <th scope="col" style="width:83px;">Destroy</th>
      </tr>
      <% if !@events.nil? %>
        <% @events.each do |event| %>
          <tr>
            <td scope="row" style="word-wrap: break-word;"><%= event.name %></td>
            <td><%= link_to 'Guests', event_display_path(event), :class => "text-primary" %></td>
            <td><%= link_to 'Details', event_path(event), :class => "text-primary" %></td>
            <td><%= link_to 'Edit', edit_event_path(event), :class => "text-primary" %></td>
            <td><%= link_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, :class => "text-primary" %></td>
          </tr>
        <% end %>
      <% end %>
    </table>

    <table class="table table-striped table-bordered table-dark" style="table-layout: fixed;">
      <tr>
        <th scope="col">Guest Events</th>
        <th scope="col" style="width:75px;">Guests</th>
        <th scope="col" style="width:67px;">Details</th>
      </tr>
      <% if !@guestEvents.nil? %>
        <% @guestEvents.each do |event| %>
          <%# Rails.logger.event.debug("Event.id: <#{event.id}>.\n") %>
          <tr class="bg-success">
            <td scope="row" style="word-wrap: break-word;"><%= event.name %></td>
            <td><%= link_to 'Guests', event_display_path(event), :class => "text-success" %></td>
            <td><%= link_to 'Details', event_path(event), :class => "text-success" %></td>
          </tr>
        <% end %>
      <% end %>
    </table>

  </div>
  <div class="col-md-1 col-lg-2 col-xl-3">
  </div>
  </div>
</div>