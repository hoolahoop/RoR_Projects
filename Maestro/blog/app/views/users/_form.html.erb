<%= form_for @event, url: event_users_path, method: :post do |f| %>
  <div id='users'>
    <%= f.fields_for :users do |guest| %>
      <%= render 'user_fields', :f => guest %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add guest', f, :users %>
    </div>
  </div>
  <%# f.buttons do %>
    <%= f.submit 'Save' %>
  <%# end %>
<% end %>