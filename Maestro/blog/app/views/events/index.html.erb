<div class="container-fluid">
  <div class="row">
    <div class="col-md-1 col-lg-2 col-xl-3">
  </div>
  <div class="col-md-10 col-lg-8 col-xl-6">
    <h1 class="late mt-2">My Events</h1>
    <p>
      <%= link_to 'New event', new_event_path, :class => "btn btn-primary" %>
    </p>

    <table class="table table-striped table-bordered table-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Destroy</th>
      </tr>
      <% if !@events.nil? %>
        <% @events.each do |event| %>
          <tr>
            <td scope="row"><%= event.name %></td>
            <td><%= link_to 'Show', event_path(event), :class => "text-primary" %></td>
            <td><%= link_to 'Edit', edit_event_path(event), :class => "text-primary" %></td>
            <td><%= link_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, :class => "text-primary" %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
  <div class="col-md-1 col-lg-2 col-xl-3">
  </div>
  </div>
</div>