<div class="container-fluid">
  <div class="row">
    <div class="col-md-1 col-lg-2 col-xl-3">
  </div>
  <div class="col-md-10 col-lg-8 col-xl-6">
    <h1 class="late mt-2">Guest List</h1>
    <p>
      <% if @isOwner %>
        <%= link_to 'Add/Remove guests', event_add_path, :class => "btn btn-primary" %>
      <% end %>
    </p>

    <table class="table table-striped table-bordered table-dark" style="table-layout: fixed;">
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <% if @isOwner %>
          <th scope="col" style="width:65px;">Rules</th>
          <th scope="col" style="width:83px;">Remove</th>
        <% end %>
      </tr>
      <% if !@guests.nil? %>
        <% @guests.each do |guest| %>
          <tr>
            <td scope="row" style="word-wrap: break-word;"><%= guest.first_name %></td>
            <td scope="row" style="word-wrap: break-word;"><%= guest.last_name %></td>
            <td scope="row" style="word-wrap: break-word;"><%= guest.email %></td>
            <% if @isOwner %>
              <td><%= link_to 'Rules', edit_guest_path(guest.id), method: :get, :class => "text-primary" %></td>
              <td><%= link_to 'Remove', event_delete_path(@event.id, guest.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "text-primary" %></td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </table>

    <p class="mt-3">
      <%= link_to 'Event details', event_path(@event), :class => "btn btn-primary" %>
      <% if @isOwner %>
        <%= link_to 'Edit event', edit_event_path(@event), :class => "btn btn-primary" %>
      <% end %>
      <%= link_to 'Back', events_path, :class => "btn btn-primary" %>
    </p>

  </div>
  <div class="col-md-1 col-lg-2 col-xl-3">
  </div>
  </div>
</div>