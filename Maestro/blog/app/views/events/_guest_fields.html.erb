<%#= render 'layouts/error_messages', object: f %>
<%= f.hidden_field :id, class: 'd-xs-none' %>
<%= f.hidden_field :event_id, class: 'd-xs-none' %>
<div class='nested-fields col-md-6'>
  <div class="field form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>
  <%= link_to_remove_association "Remove guest", f, :class => "btn btn-primary" %>
</div>