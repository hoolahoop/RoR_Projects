<%= form_with model: @event, scope: :event, url: event_path, method: :put, local: true do |form| %>
 
  <%= render 'layouts/error_messages', object: @event %>
 
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
 
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :option %>
    <%= select_tag 'option', options_for_select([["Secret Santa", "1"], ["More Coming In The Future", "2", {disabled: 'disabled'} ]]), class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :apartment_number %>
    <%= form.number_field :apartment_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, options = {class: 'form-control', min: Date.today} %>
  </div>

  <div class="form-group">
    <%= form.label :time %>
    <%= form.time_field :time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, class: 'form-control' %>
  </div>

  <%= form.submit 'Create/Edit Event', :class => "btn btn-primary" %>
 
<% end %>

<p class="mt-3">
  <%= link_to 'Back', events_path, :class => "btn btn-primary" %>
</p>