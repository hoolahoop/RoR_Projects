<div class="container-fluid">
  <div class="row">
    <div class="col-md-1 col-lg-2 col-xl-3">
  </div>
  <div class="col-md-10 col-lg-8 col-xl-6">
    <h1 class="late mt-2">Listing articles</h1>
    <p>
      <%= link_to 'New article', new_article_path, :class => "btn btn-primary" %>
    </p>

    <table class="table table-striped table-bordered table-dark">
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Text</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Destroy</th>
      </tr>
     
      <% @articles.each do |article| %>
        <tr>
          <td scope="row"><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article), :class => "text-primary" %></td>
          <td><%= link_to 'Edit', edit_article_path(article), :class => "text-primary" %></td>
          <td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, :class => "text-primary" %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-1 col-lg-2 col-xl-3">
  </div>
  </div>
</div>